<% if user_signed_in? %>
  <h2 class="pl-4 text-sky-400 font-semibold mb-3">Welcome <%= current_user.name %>!</h2>
  <div class="container flex flex-col items-center gap-4">
    <% @categories.each do |category| %>
      <div class="container flex justify-between px-4 items-center w-11/12 h-20 bg-white mx-4">
        <img src="<%= category.icon %>" class="w-12 h-12" />
        <p><%= category.name %></p>
        <p>amount</p>
      </div>
    <% end %>
  </div>
  <%else%>
  <div class="container h-3/4 flex flex-col justify-between">
    <h1 class="text-center text-4xl font-bold mt-32">Budget Tracker</h1>
    <div class="mt-12 flex flex-col text-center align-middle gap-8 items-center">
      <%= link_to "LOG IN", new_user_session_path, class: 'w-11/12 btn-primary' %>
      <%= link_to "SIGN UP", new_user_registration_path %>
    </div>
  </div>
<%end%>
